@{
    ViewData["Title"] = ViewLocalizer["Create Tag"];
}
@model TagViewModel
<div class="container">
    <form asp-area="Admin" asp-controller="Tag" asp-action="Create" method="post" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="@ViewLocalizer["Please enter your name"]">
            </div>
        </div>
        <div >
            <select class="form-select-sm" asp-for="ProductId" asp-items="@Model.selectListItemProducts" multiple></select>
            <hr />
            @if (Model.selectListItemProducts != null)
                {
                <select>

                    @foreach (var product in Model.selectListItemProducts)
                    {
                        <option value="@product.Value"> @product.Text</option>

                    }
                </select>


                }
                else
                {
                    <span>Product is empty</span>
                }

        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-primary" value="@ViewLocalizer["Send"]">
            </div>
        </div>
    </form>
</div>