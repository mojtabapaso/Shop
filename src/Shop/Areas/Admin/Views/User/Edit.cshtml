@{
	ViewData["Tilte"] = ViewLocalizer["Edit User"];
}

@model UserViewModel
<div class="container">

	<form asp-area="Admin" asp-controller="User" asp-action="Edit" asp-asp-route-id="@Model.Id" class="form-horizontal">

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="form-group">
			<label asp-for="UserName" class="col-sm-2 control-label"></label>
			<div class="col-sm-10">
				<input asp-for="UserName" class="form-control" value="@Model.UserName">
			</div>
		</div>

		<div class="form-group">
			<label asp-for="LastName" class="col-sm-2 control-label"></label>
			<div class="col-sm-10">
				<input asp-for="LastName" class="form-control" value="@Model.LastName">
			</div>
		</div>

		<div class="form-group">
			<label asp-for="FirstName" class="col-sm-2 control-label"></label>
			<div class="col-sm-10">
				<input asp-for="FirstName" class="form-control" value="@Model.FirstName">
			</div>
		</div>

		<div class="form-group">
			<label asp-for="CreateDateTime" class="col-sm-2 control-label"></label>
			<div class="col-sm-10">
				<input asp-for="CreateDateTime" class="form-control" value="@Model.CreateDateTime">
			</div>
		</div>

		<div class="form-group">
			<label asp-for="Email" class="col-sm-2 control-label"></label>
			<div class="col-sm-10">
				<input asp-for="Email" class="form-control" value="@Model.Email">
			</div>
		</div>

		<div class="form-group">
			<label asp-for="PhoneNumber" class="col-sm-2 control-label"></label>
			<div class="col-sm-10">
				<input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber">
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Password" class="col-sm-2 control-label"></label>
			<div class="col-sm-10">
				<input asp-for="Password" class="form-control" placeholder="Password">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<input type="submit" class="btn btn-primary" value="@ViewLocalizer["Send"]">
			</div>
		</div>

	</form>

</div>