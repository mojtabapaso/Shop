@{
	ViewData["Title"] = "Login by Password";
}
@model LoginByPasswordViewModel
<div class="row">
	<div class="col-md-4">
		<form asp-controller="Account" asp-action="LoginByPassword">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="PhoneNumber" class="control-label"></label>
				<input asp-for="PhoneNumber" class="form-control" />
				<span asp-validation-for="PhoneNumber" class="text-danger"></span>

				<label asp-for="Password" class="control-label"></label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>

				<label asp-for="RememberMe" class="control-label"></label>
				<input asp-for="RememberMe" type="checkbox"  />
				<span asp-validation-for="RememberMe" class="text-danger"></span>
			</div>
			<input type="submit" class="btn btn-primary" value="ارسال">
		</form>

	</div>
</div>