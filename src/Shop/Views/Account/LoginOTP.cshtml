@model CodeOTPViewModel
@{
	ViewData["Title"] = "کد تایید";
}
<h2>تایید شماره تلفن</h2>
<div class="row">
	<div class="col-md-4">
		<form asp-controller="Account" asp-action="LoginOTP">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="PhoneNumber" class="control-label"></label>
				<input asp-for="PhoneNumber" class="form-control" />
				<span asp-validation-for="PhoneNumber" class="text-danger"></span>

			</div>
			<input type="submit" class="btn btn-primary" value="تایید">
		</form>
		@* <span class="text-danger">شماره تلفن باید با ۰۹ شروع شود و حتما ۱۱ رقم باشد</span> *@
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial.cshtml">
}
